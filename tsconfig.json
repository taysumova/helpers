{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@core/*": ["core/*"],
      "@fonts/*": ["fonts/*"],
      "@entities/*": ["entities/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],
      "@Layout": ["Layout"],
      "@Layout/*": ["Layout/*"],
      "@models": ["models"],
      "@models/*": ["models/*"],
      "@pageComponents": ["pageComponents"],
      "@pageComponents/*": ["pageComponents/*"],
      "@providers": ["providers"],
      "@providers/*": ["providers/*"],
      "@public/*": ["public/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@theme": ["theme"],
      "@theme/*": ["theme/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@validations": ["validations"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
